<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title_id"
        layout="@layout/title_text"></include>


    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_5">

            <LinearLayout
                android:id="@+id/num_linearlayout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimens_10"
                android:paddingTop="@dimen/dimens_10">

                <TextView
                    android:id="@+id/itemreq_itemreqnum_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/workorder_wonum_title"
                    android:textColor="@color/body_text_1"
                    android:textSize="@dimen/dimens_16dp" />

                <TextView
                    android:id="@+id/workorder_wonum_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_toRightOf="@+id/item_num_title"
                    android:hint="@string/have_not_data"
                    android:textColor="@color/body_text_1"
                    android:textSize="@dimen/dimens_16dp" />
            </LinearLayout>

            <View
                android:id="@+id/view_1_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_line"
                android:layout_below="@+id/num_linearlayout_id"
                android:background="@drawable/line"></View>

            <LinearLayout
                android:id="@+id/description_linearlayout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_1_id"
                android:layout_marginLeft="@dimen/dimen_5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimens_10"
                android:paddingTop="@dimen/dimens_10">

                <TextView
                    android:id="@+id/itemreq_description_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/workorder_desction_title"
                    android:textColor="@color/body_text_1"
                    android:textSize="@dimen/dimens_16dp" />

                <TextView
                    android:id="@+id/workorder_desction_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="@string/have_not_data"
                    android:textColor="@color/body_text_1"
                    android:textSize="@dimen/dimens_16dp" />
            </LinearLayout>


            <View
                android:id="@+id/view_2_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_line"
                android:layout_below="@+id/description_linearlayout_id"
                android:background="@drawable/line"></View>

            <LinearLayout
                android:id="@+id/recorder_linearlayout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_2_id"
                android:layout_marginLeft="@dimen/dimen_5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimens_10"
                android:paddingTop="@dimen/dimens_10">

                <TextView
                    android:id="@+id/itemreq_recorder_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/workorder_onbehalfof_title"
                    android:textColor="@color/body_text_1"
                    android:textSize="@dimen/dimens_16dp" />

                <TextView
                    android:id="@+id/workorder_onbehalfof_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/have_not_data"
                    android:textColor="@color/body_text_1"
                    android:textSize="@dimen/dimens_16dp" />
            </LinearLayout>

            <View
                android:id="@+id/view_3_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_line"
                android:layout_below="@+id/recorder_linearlayout_id"
                android:background="@drawable/line"></View>

            <LinearLayout
                android:id="@+id/recorderdate_linearlayout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_3_id"
                android:layout_marginLeft="@dimen/dimen_5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimens_10"
                android:paddingTop="@dimen/dimens_10">

                <TextView
                    android:id="@+id/itemreq_recorderdate_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/workorder_status_title"
                    android:textColor="@color/body_text_1"
                    android:textSize="@dimen/dimens_16dp" />

                <TextView
                    android:id="@+id/workorder_status_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/have_not_data"
                    android:textColor="@color/body_text_1"
                    android:textSize="@dimen/dimens_16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_line"
                android:layout_below="@+id/recorderdate_linearlayout_id"
                android:background="@drawable/line"></View>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
