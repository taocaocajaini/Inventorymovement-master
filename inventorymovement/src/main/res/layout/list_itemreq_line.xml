<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="5dp">

            <TextView
                android:id="@+id/itemreq_num_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/itemreq_num_title"
                android:textColor="@color/body_text_1"
                android:textSize="@dimen/dimens_16dp" />

            <TextView
                android:id="@+id/itemreq_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/itemreq_num_title"
                android:hint="@string/hint_item_num_title"
                android:textColor="@color/body_text_1"
                android:textSize="@dimen/dimens_16dp" />


            <TextView
                android:id="@+id/itemreq_matername_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemreq_num_title"
                android:layout_marginTop="5dp"
                android:text="@string/itemreq_matername_text"
                android:textColor="@color/body_text_1"
                android:textSize="@dimen/dimens_16dp" />

            <TextView
                android:id="@+id/itemreq_matername_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemreq_num_text"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/itemreq_matername_title"
                android:ellipsize="end"
                android:ems="14"
                android:hint="@string/hint_item_desc_title"
                android:singleLine="true"
                android:textColor="@color/body_text_1"
                android:textSize="@dimen/dimens_16dp" />

            <TextView
                android:id="@+id/itemreq_xh_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemreq_matername_title"
                android:layout_marginTop="5dp"
                android:text="@string/itemreq_xh_text"
                android:textColor="@color/body_text_1"
                android:textSize="@dimen/dimens_16dp" />

            <TextView
                android:id="@+id/itemreq_xh_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemreq_matername_text"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/itemreq_xh_title"
                android:ellipsize="end"
                android:ems="14"
                android:hint="@string/hint_item_desc_title"
                android:singleLine="true"
                android:textColor="@color/body_text_1"
                android:textSize="@dimen/dimens_16dp" />


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>